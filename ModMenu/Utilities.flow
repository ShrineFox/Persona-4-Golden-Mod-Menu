import( "Utilities.msg" );

void Message_Window(int messageNum)
{
    OPEN_MSG_WIN();
    MSG( messageNum );
    CLOSE_MSG_WIN();
}

int SelectDigit( int helpText )
{
    while ( true )
    {
		SET_SEL_CHOICE_KEYBIND(10, 10);
		SET_SEL_CHOICE_KEYBIND(11, 10);
		SET_SEL_CHOICE_KEYBIND(5, 10);
		SET_SEL_CHOICE_KEYBIND(7, 10);
		SET_SEL_CHOICE_KEYBIND(14, 11);
		SET_SEL_CHOICE_KEYBIND(15, 12);
		int digit = ADV_SEL( helpText, Num_Menu, 0);
		if ( digit < 5 ) //0 through 4
			return digit;
		if ( digit == 10 )
        {
			SET_SEL_CHOICE_KEYBIND(10, 10);
			SET_SEL_CHOICE_KEYBIND(11, 10);
			SET_SEL_CHOICE_KEYBIND(5, 10);
			SET_SEL_CHOICE_KEYBIND(7, 10);
			SET_SEL_CHOICE_KEYBIND(14, 11);
			SET_SEL_CHOICE_KEYBIND(15, 12);
            digit = ADV_SEL( helpText, Num_Menu2, 0) + 5;
            if ( digit < 10 )
				return digit; //5 through 9 or back
			else if (digit == 16)
			{	
				digit = -1; //exit
				break;
			}
        }
		else if (digit == 11)
		{
			digit = -1; //exit
			break;
		}
    }
	return -1;
}

int Get_Number( int digitCount, int helpText )
{
	tryagain:
    int number = 0;
    
    for ( int i = 0; i < digitCount; i++ )
    {
        int digit = SelectDigit(helpText);
		if (digit == -1)
			return -1;
		number *= 10;
		number += digit;
    }
	
	SET_MSG_VAR(0, number, 0);
	OPEN_MSG_WIN();
	MSG( ConfirmNumber );
	SET_SEL_CHOICE_KEYBIND(14, 1);
	int confirm = SEL(YESNO_SEL);
	CLOSE_MSG_WIN();
	if (confirm == 1)
		goto tryagain;

    return number;
}