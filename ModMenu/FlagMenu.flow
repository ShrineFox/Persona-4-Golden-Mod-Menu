int Flag_Menu()
{
	while(true)
	{
		SEL_CHK_PAD(14, 17);
		SEL_CHK_PAD(15, 18);
		int flag = ADV_SEL(Flag_Menu_Text, Flag_Menu, 0);
		switch (flag) 
		{
			case 0:
				ToggleBit();
				break;
			case 1:
				ToggleBitRange();
				break;
			case 2:
				KillQuests();
				break;
			case 3:
				ReviveQuests();
				break;
			case 4:
				TurnOffTiredFlags();
				break;
			case 5:
				UnlockMap();
				break;
			case 6:
				ToggleHUD();
				break;
			case 17:
				return -1;
			case 18:
				return 0;
		}
	}
	return 0;
}

void ToggleHUD()
{
	SEL_CHK_PAD(14,2);
	int toggle = ADV_SEL(OnOff_Text, OnOff, 0);
	if (toggle == 0)
		SHOW_DATE(1);
	else if (toggle == 1)
		SHOW_DATE(0);
}

void TurnOffTiredFlags()
{
	BIT_OFF( 0 + 0x0400 + 0x0800 + 2 );
	BIT_OFF( 2750 );
}

void UnlockMap()
{
	BIT_ON( 0 + 0x0400 + 0x0800 + 173 );
