void RemoveParty()
{
	int index = 2;
	while (index < 9)
	{
		RM_PARTY(index);
		index++;
	}
}

int BattleSelect()
{
	SEL_CHK_PAD(14, 10);
	SEL_CHK_PAD(15, 11);
	int battle = ADV_SEL(BATTLE_SEL_Text, BATTLE_SEL, 0);
	if (battle == 0)
	{
		int major = Get_Number(3, MSG_3);
		if (major == -1)
			return -1;
		FADE(2, 5);
		FADE_SYNC();
		CALL_BATTLE(major, 0);
		return 0;
	}
	else if (battle == 1)
	{
		return Battles();
	}
	else if (battle == 10)
		return -1;
	return 0;
}

