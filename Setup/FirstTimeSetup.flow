import("FirstTimeSetup.msg");

void FirstTimeSetup()
{
	//Introduction
	OPEN_MSG_WIN();
	HELP_MSG(SquareMenuConfig);
	CLOSE_MSG_WIN();

	//Marks first time setup as complete
	BIT_ON(6320);

	//Set all menu option values to 0
	for (int i = 0; i < 8; i++)
	{
		BIT_OFF(6321 + i);
	}

	// Set second group of menu options to 0
	for (int i = 0; i < 3; i++)
	{
		BIT_OFF(6340 + i);
	}

	//Enable "Options" in menu for later configuration
	BIT_ON(6329);

	//Set all dungeon option values to 0
	for (int i = 0; i < 4; i++)
	{
		BIT_OFF(6330 + i);
	}

	//Toggle options until done
	MenuOptions();
}

void MenuOptions()
{
	//First time setup for Custom Square Menu
	if (!BIT_CHK(6320))
	{
		FirstTimeSetup();
	}
	else
	{
		//Toggle options until done
		bool done = false;
		int pageNum = 0;
		while (!done)
		{
			if (pageNum == 0)
			{
				//Set options for page 1
				for (int i = 0; i < 8; i++)
				{
					SET_MSG_VAR(i, 619 + BIT_CHK(6321 + i), 6);
				}
				SET_SEL_CHOICE_KEYBIND(10, 8);
				SET_SEL_CHOICE_KEYBIND(11, 8);
				SET_SEL_CHOICE_KEYBIND(5, 8);
				SET_SEL_CHOICE_KEYBIND(7, 8);
			}
			else
			{
				// Set optins for page 2
				SET_MSG_VAR(0, 619 + BIT_CHK(6334), 6); // Default to direct commands
				for (int i = 1; i < 4; i++)
				{
					SET_MSG_VAR(i, 619 + BIT_CHK(6339 + i), 6);
				}
				SET_SEL_CHOICE_KEYBIND(10, 4);
				SET_SEL_CHOICE_KEYBIND(11, 4);
				SET_SEL_CHOICE_KEYBIND(5, 4);
				SET_SEL_CHOICE_KEYBIND(7, 4);
			}
			SET_SEL_CHOICE_KEYBIND(14, 18);
			SET_SEL_CHOICE_KEYBIND(15, 18);
			//Toggle selection or read more about it
			int selection = ADV_SEL(SquareMenuOptions_Text + pageNum, SquareMenuOptions + pageNum, 0);
			if (selection < 17)
			{
				if (pageNum == 0)
				{
					if (selection == 8)
						pageNum = !pageNum;
					else 
						ToggleOption(ModMenu_About, 6321, selection, 0);
				}
				else
				{
					if (selection == 4)
						pageNum = !pageNum;
					else
						ToggleOption(DirectCommands_About, 6339, selection, 1);
				}
			}
			else
			{
				done = true;
				if (!BIT_CHK(6321))
				{
					OPEN_MSG_WIN();
					MSG(OptionsWarning);
					CLOSE_MSG_WIN();
				}
			}
		}
	}
}

void ToggleOption(int startMsg, int startFlag, int selection, int pageNum)
{
	OPEN_MSG_WIN();
	MSG(startMsg + selection);
	SET_SEL_CHOICE_KEYBIND(14, 2);
	int sel = SEL(ToggleMenu);
	switch (sel)
	{
	case 0: //on
		if (selection == 0 && pageNum == 1)
			BIT_ON(6334);
		else
			BIT_ON(startFlag + selection);
		if (selection == 3 && pageNum == 0)
		{
			CLOSE_MSG_WIN();
			DungeonOptionsToggle();
		}
		else if (selection == 4 && pageNum == 0)
		{
			MSG(SPOILER_TOGGLE);
			sel = SEL(ToggleMenu);
			if (sel == 0)
				BIT_ON(5678);
			else if (sel == 1)
				BIT_OFF(5678);
		}
		else if (selection == 2 && pageNum == 1)
		{
			CLOSE_MSG_WIN();
			RemoveEventsOptionsToggle();
		}
		break;
	case 1: //off
		if (selection == 0 && pageNum == 1)
			BIT_OFF(6334);
		else
			BIT_OFF(startFlag + selection);
		if (selection == 3 && pageNum == 0)
		{
			BIT_OFF(6330);
			BIT_OFF(6331);
			BIT_OFF(6332);
			BIT_OFF(6333);
		}
		else if (selection == 2 && pageNum == 1)
		{
			BIT_OFF(6350);
			BIT_OFF(6351);
			BIT_OFF(6352);
			BIT_OFF(6353);
		}
		break;
	case 2: //back
		break;
	}
	CLOSE_MSG_WIN();
}

void DungeonOptionsToggle()
{
	//Toggle options until done
	bool done = false;
	while (!done)
	{
		//Set message variables for menu options
		for (int i = 0; i < 4; i++)
		{
			SET_MSG_VAR(i, 619 + BIT_CHK(6330 + i), 6);
		}
		SET_SEL_CHOICE_KEYBIND(14, 4);
		SET_SEL_CHOICE_KEYBIND(15, 4);
		//Toggle selection or read more about it
		int selection = ADV_SEL(DungeonOptions_Text, DungeonOptions, 0);
		if (selection != 4)
		{
			ToggleOption(ShowFox_About, 6330, selection, 0);
		}
		else
		{
			done = true;
		}
	}
}

void RemoveEventsOptionsToggle()
{
	//Toggle options until done
	bool done = false;
	while (!done)
	{
		//Set message variables for menu options
		for (int i = 0; i < 4; i++)
		{
			SET_MSG_VAR(i, 619 + BIT_CHK(6350 + i), 6);
		}
		SET_SEL_CHOICE_KEYBIND(14, 4);
		SET_SEL_CHOICE_KEYBIND(15, 4);
		//Toggle selection or read more about it
		int selection = ADV_SEL(RemoveEventsOptions_Text, RemoveEventsOptions, 0);
		if (selection != 4)
		{
			ToggleOption(RemoveCamping_About, 6350, selection, 1);
		}
		else
		{
			done = true;
		}
	}
}

bool IntroSkip()
{
	OPEN_MSG_WIN();
	HELP_MSG(IntroSkipConfig);
	CLOSE_MSG_WIN();
	OPEN_MSG_WIN();
	MSG(IntroSkipSelection);
	int selection = SEL(YesNo);
	CLOSE_MSG_WIN();
	if (selection == 0)
		selection = 1;
	else
		selection = 0;
	return selection;
}