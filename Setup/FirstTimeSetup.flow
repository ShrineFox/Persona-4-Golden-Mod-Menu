import("FirstTimeSetup.msg");

void FirstTimeSetup()
{
	//Introduction
	OPEN_MSG_WIN();
	HELP_MSG( SquareMenuConfig );
	CLOSE_MSG_WIN();
	
	//Marks first time setup as complete
	BIT_ON(6520);
	
	//Set all menu option values to 0
	for (int i = 0; i < 8; i++)
	{
		BIT_OFF(6521 + i);
	}
	
	//Enable "Options" in menu for later configuration
	BIT_ON(6529);
	
	//Set all dungeon option values to 0
	for (int i = 0; i < 4; i++)
	{
		BIT_OFF(6530 + i);
	}
	
	//Toggle options until done
	MenuOptions();
}

void MenuOptions()
{
	//First time setup for Custom Square Menu
	if (!BIT_CHK(6520))
	{
		FirstTimeSetup();
	}
	else
	{
		//Toggle options until done
		bool done = false;
		while(!done)
		{
			//Set message variables for menu options
			for (int i = 0; i < 8; i++)
			{
				SET_MSG_VAR(i, 619 + BIT_CHK(6521 + i), 6);
			}
			SET_SEL_CHOICE_KEYBIND( 14, 8 );
			SET_SEL_CHOICE_KEYBIND( 15, 8 );
			//Toggle selection or read more about it
			int selection = ADV_SEL(SquareMenuOptions_Text, SquareMenuOptions, 0);
			if (selection != 8)
			{
				ToggleOption(ModMenu_About, 6521, selection);
			}
			else
			{
				done = true;
				if (!BIT_CHK(6521))
				{
					OPEN_MSG_WIN();
					MSG(OptionsWarning);
					CLOSE_MSG_WIN();
				}
			}
		}
	}
}

void ToggleOption(int startMsg, int startFlag, int selection)
{
	OPEN_MSG_WIN();
	MSG( startMsg + selection );
	SET_SEL_CHOICE_KEYBIND(14, 2);
	int sel = SEL(ToggleMenu);
	switch (sel)
	{
		case 0: //on
			BIT_ON(startFlag + selection);
			if(selection == 3)
			{
				CLOSE_MSG_WIN();
				DungeonOptionsToggle();
			}
			else if(selection == 4)
			{
				MSG(SPOILER_TOGGLE);
				sel = SEL(ToggleMenu);
				if (sel == 0)
					BIT_ON(5678);
				else if (sel == 1)
					BIT_OFF(5678);
			}
			break;
		case 1: //off
			BIT_OFF(startFlag + selection);
			if (selection == 3)
			{
				BIT_OFF(6530);
				BIT_OFF(6531);
				BIT_OFF(6532);
				BIT_OFF(6533);
			}
			break;
		case 2: //back
			break;
	}
	CLOSE_MSG_WIN();
}

void DungeonOptionsToggle()
{
	//Toggle options until done
	bool done = false;
	while(!done)
	{
		//Set message variables for menu options
		for (int i = 0; i < 4; i++)
		{
			SET_MSG_VAR(i, 619 + BIT_CHK(6530 + i), 6);
		}
		SET_SEL_CHOICE_KEYBIND( 14, 4 );
		SET_SEL_CHOICE_KEYBIND( 15, 4 );
		//Toggle selection or read more about it
		int selection = ADV_SEL(DungeonOptions_Text, DungeonOptions, 0);
		if (selection != 4)
		{
			ToggleOption(ShowFox_About, 6530, selection);
		}
		else
		{
			done = true;
		}
	}
}
