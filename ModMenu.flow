int ChangeYen()
{
	int new_yen = Get_Number(7, MSG_7);
	if (new_yen == -1)
		return -1;
	int reset = 0 - ADD_YEN(0);
	ADD_YEN(reset);
	ADD_YEN(new_yen);
	return 0;
}

int ChangeItem()
{
	tryagain:
	int item = Get_Number(4, MSG_4_Item);
	if (item == -1)
		return -1;
	if (item > 2559)
	{
		OPEN_MSG_WIN();
		MSG( InvalidItem );
		CLOSE_MSG_WIN();
		goto tryagain;
	}
	SET_MSG_VAR(0, item, 1);
	SET_MSG_VAR(1, GET_ITEM(item), 0);
	OPEN_MSG_WIN();
	MSG( ConfirmItem );
	int confirm = SEL(YESNO_SEL);
	CLOSE_MSG_WIN();
	if (confirm == 1)
		return -1;
	int numItems = Get_Number(2, MSG_2_Item);
	if (numItems == -1)
		return -1;
	SET_ITEM(item, numItems);
	return 0;
}

