		switch (sl)
		{
			case 0:
				IncreaseSL();
				break;
			case 1:
				ReverseSL();
				break;
			case 2:
				BreakSL();
				break;
			case 3:
				LevelUpSL();
				break;
			case 4:
				AddSL();
				break;
			case 5:
				return;
		}
	}
}

void IncreaseSL()
{
	int major = Get_Number(2, MSG_2);
	if (major == -1)
		return;
	EVT_FUNCTION_0031( major, 50, 1 );
	SL_LVLUP_VISUAL(major, (GET_SL_LEVEL(major) + 1), 1);
	INCREASE_SL(major);
}

void ReverseSL()
